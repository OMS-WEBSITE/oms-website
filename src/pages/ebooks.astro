<!-- Inline Script for Popup Logic -->
      <script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const submitBtn = document.getElementById("newsletterSubmit");
    const popup = document.getElementById("popupModal");
    const popupCard = document.getElementById("popupCard");
    const closeBtn = document.getElementById("closePopup");

    function openPopup() {
      popup.classList.remove("hidden");
      popup.style.opacity = "1";
      popupCard.style.transform = "scale(1)";
      popupCard.style.transition = "transform 0.3s ease, opacity 0.3s ease";
    }

    function closePopup() {
      popup.style.opacity = "0";
      popupCard.style.transform = "scale(0.95)";
      popupCard.style.opacity = "0";
      setTimeout(() => {
        popup.classList.add("hidden");
        popupCard.style.opacity = "1"; // reset for next open
        document.body.style.overflow = "auto";
      }, 300);
    }

    // Open popup on submit
    submitBtn.addEventListener("click", (e) => {
      e.preventDefault();
      openPopup();
    });

    // Close popup on close button click
    closeBtn.addEventListener("click", closePopup);

    // Close popup when clicking outside the card
    popup.addEventListener("click", (e) => {
      if (e.target === popup) closePopup();
    });

    // âœ… Close popup when user scrolls
    window.addEventListener("scroll", () => {
      if (!popup.classList.contains("hidden")) {
        closePopup();
      }
    });
  });
</script>


