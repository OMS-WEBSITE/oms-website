---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';
import ResourceCard from '@/components/ui/resource-card';
import { Button } from '@/components/ui/button';

const seo = {
	title: "Security Audit Blog | Expert Insights & Best Practices",
	description: "Stay updated with expert articles on AI in security auditing, GDPR compliance, cloud security, and zero trust architecture. Practical guides and insights from industry leaders.",
	image: "/og-image.png",
	canonicalURL: Astro.site + Astro.url.pathname,
};
---

<Layout {...seo}>
  <Header client:only="react" />

  <main>
    {/* Hero Section */}
    <section class="bg-gradient-to-b from-indigo-50 to-white py-16 sm:py-20">
      <div class="container mx-auto max-w-7xl px-4 text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 mb-4 sm:mb-6">
          Security Audit Insights
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto">
          Expert articles, guides, and insights on IT security auditing and compliance.
        </p>
      </div>
    </section>

    {/* Featured Posts */}
    <section class="py-12 sm:py-16">
      <div class="container mx-auto max-w-7xl px-4">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-8 sm:mb-12 text-center sm:text-left">
          Featured Posts
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-8">
          <ResourceCard
            title="The Future of AI in Security Auditing"
            description="Explore how artificial intelligence is transforming the security audit landscape and what it means for your organization."
            image="/placeholder-1.jpg"
            author="Dr. Sarah Chen"
            date="Apr 1, 2025"
            readTime="8 min"
            category="Trends"
            tags={["AI", "Machine Learning", "Security"]}
            type="blog"
          />
          <ResourceCard
            title="Implementing Zero Trust Security"
            description="A comprehensive guide to implementing zero trust architecture in your security audit framework."
            image="/placeholder-2.jpg"
            author="Michael Rodriguez"
            date="Mar 28, 2025"
            readTime="12 min"
            category="Best Practices"
            tags={["Zero Trust", "Security Architecture", "Implementation"]}
            type="blog"
          />
        </div>
      </div>
    </section>

    {/* Latest Posts */}
    <section class="py-12 sm:py-16 bg-gray-50">
      <div class="container mx-auto max-w-7xl px-4">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-8 sm:mb-12 gap-4 sm:gap-0">
          <h2 class="text-2xl sm:text-3xl font-bold text-gray-800">Latest Posts</h2>
          <div class="flex flex-col sm:flex-row gap-2 sm:gap-4">
            <Button variant="outline" class="w-full sm:w-auto">Filter</Button>
            <select class="px-4 py-2 rounded-lg border border-gray-200 bg-white w-full sm:w-auto">
              <option>Most Recent</option>
              <option>Most Popular</option>
              <option>Trending</option>
            </select>
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 sm:gap-8">
          <ResourceCard
            title="GDPR Compliance Checklist 2025"
            description="Updated guidelines and checklist for maintaining GDPR compliance in your security audits."
            image="/placeholder-3.jpg"
            author="Emma Thompson"
            date="Mar 25, 2025"
            readTime="10 min"
            category="Compliance"
            tags={["GDPR", "Privacy", "Compliance"]}
            type="blog"
          />
          <ResourceCard
            title="Cloud Security Audit Best Practices"
            description="Essential practices for conducting thorough security audits in cloud environments."
            image="/placeholder-4.jpg"
            author="David Park"
            date="Mar 22, 2025"
            readTime="15 min"
            category="Cloud Security"
            tags={["Cloud", "AWS", "Azure", "Security"]}
            type="blog"
          />
          <ResourceCard
            title="Automated Security Testing Tools"
            description="A comparison of leading automated security testing tools for modern OMS Softwarecesses."
            image="/placeholder-5.jpg"
            author="Alex Chen"
            date="Mar 20, 2025"
            readTime="7 min"
            category="Tools"
            tags={["Automation", "Testing", "Tools"]}
            type="blog"
          />
        </div>
      </div>
    </section>

    {/* Categories */}
    <section class="py-12 sm:py-16">
      <div class="container mx-auto max-w-7xl px-4">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-8 sm:mb-12 text-center sm:text-left">
          Browse by Category
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 sm:gap-6">
          <a href="/best-practices" class="bg-white rounded-xl p-4 sm:p-6 shadow-sm hover:shadow-md transition-shadow flex flex-col items-center text-center">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center text-2xl mb-2 sm:mb-4">üîí</div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1 sm:mb-2">Security</h3>
            <p class="text-gray-600 text-sm sm:text-base">125 articles</p>
          </a>
          <a href="/explore-industries" class="bg-white rounded-xl p-4 sm:p-6 shadow-sm hover:shadow-md transition-shadow flex flex-col items-center text-center">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center text-2xl mb-2 sm:mb-4">üìã</div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1 sm:mb-2">Compliance</h3>
            <p class="text-gray-600 text-sm sm:text-base">98 articles</p>
          </a>
          <a href="/explore-organizations" class="bg-white rounded-xl p-4 sm:p-6 shadow-sm hover:shadow-md transition-shadow flex flex-col items-center text-center">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center text-2xl mb-2 sm:mb-4">‚òÅÔ∏è</div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1 sm:mb-2">Cloud</h3>
            <p class="text-gray-600 text-sm sm:text-base">84 articles</p>
          </a>
          <a href="/help-center" class="bg-white rounded-xl p-4 sm:p-6 shadow-sm hover:shadow-md transition-shadow flex flex-col items-center text-center">
            <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center text-2xl mb-2 sm:mb-4">ü§ñ</div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1 sm:mb-2">Automation</h3>
            <p class="text-gray-600 text-sm sm:text-base">67 articles</p>
          </a>
        </div>
      </div>
    </section>

    {/* Newsletter */}
    <section class="py-12 sm:py-16 bg-gradient-to-r from-orange-100 to-blue-100">
      <div class="container mx-auto max-w-7xl px-4 text-center">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-4 sm:mb-6">Stay Updated</h2>
        <p class="text-lg sm:text-xl text-gray-600 mb-6 sm:mb-8 max-w-3xl mx-auto">
          Subscribe to our newsletter for the latest security audit insights and best practices.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
          <input
            type="email"
            placeholder="Enter your email"
            class="flex-1 px-4 py-3 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm sm:text-base"
          />
          <Button size="lg" className="bg-orange-500 hover:bg-orange-600 text-white w-full sm:w-auto">
            <a href="/newsletter" class="text-white">Subscribe</a>
          </Button>
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
</Layout>
