---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';
import PracticeCard from '@/components/ui/practice-card';
import { Button } from '@/components/ui/button';

// SEO metadata
const seo = {
  title: "Laboratory Audit Best Practices & Implementation Guide",
  description: "Learn industry-proven methods for maintaining compliance, improving traceability, and ensuring readiness for NABL and ISO/IEC 17025 audits.",
  image: "/og-image.png",
  canonicalURL: Astro.site + Astro.url.pathname,
};
---

<Layout {...seo}>
  <Header client:only="react" />

  <main>
    {/* Hero Section */}
    <section class="bg-gradient-to-b from-indigo-50 to-white py-20">
      <div class="container mx-auto max-w-7xl px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
          Laboratory Audit Best Practices
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Learn industry-proven methods for maintaining compliance, improving traceability,
          and ensuring readiness for NABL and ISO/IEC 17025 audits.
        </p>
      </div>
    </section>

    {/* Getting Started */}
    <section class="py-16">
      <div class="container mx-auto max-w-7xl px-4">
        <h2 class="text-3xl font-bold text-gray-800 mb-12">Getting Started</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <PracticeCard
            title="Internal Audit Planning Essentials"
            description="Learn how to structure and scope your internal audit effectively for testing or calibration labs."
            icon="📋"
            category="Planning"
            difficulty="Beginner"
            timeEstimate="15 min read"
            steps={[
              "Define audit objectives and scope (Clause 8.8.1)",
              "Identify key process owners",
              "Schedule audits across departments",
              "Prepare checklist and evidence templates"
            ]}
            resources={[
              { title: "Internal Audit Plan Template", url: "#" },
              { title: "ISO/IEC 17025 Audit Checklist", url: "#" }
            ]}
          />

          <PracticeCard
            title="Risk & Opportunity Assessment"
            description="Understand how to identify risks and improvement opportunities as required under ISO/IEC 17025:2017 Clause 8.5."
            icon="⚠️"
            category="Assessment"
            difficulty="Beginner"
            timeEstimate="20 min read"
            steps={[
              "Identify potential risks and nonconformities",
              "Assess likelihood and impact",
              "Define mitigation or improvement actions",
              "Record and monitor outcomes"
            ]}
            resources={[
              { title: "Risk Register Template", url: "#" },
              { title: "Corrective Action Log", url: "#" }
            ]}
          />

          <PracticeCard
            title="Compliance Fundamentals"
            description="Learn how to align your lab’s daily operations with ISO/IEC 17025 and NABL requirements."
            icon="✓"
            category="Compliance"
            difficulty="Beginner"
            timeEstimate="25 min read"
            steps={[
              "Review applicable standards and scope of accreditation",
              "Map processes to clauses (management & technical)",
              "Maintain calibration and traceability records",
              "Review documentation during management review"
            ]}
            resources={[
              { title: "Compliance Mapping Sheet", url: "#" },
              { title: "Documentation Templates", url: "#" }
            ]}
          />
        </div>
      </div>
    </section>

    {/* Advanced Techniques */}
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto max-w-7xl px-4">
        <h2 class="text-3xl font-bold text-gray-800 mb-12">Advanced Techniques</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <PracticeCard
            title="Automated Calibration & Record Control"
            description="Discover how automation in OMS Software reduces manual errors and ensures traceable records."
            icon="🤖"
            category="Automation"
            difficulty="Advanced"
            timeEstimate="30 min read"
            steps={[
              "Configure calibration schedules and alerts",
              "Map instruments to measurement standards",
              "Automate certificate generation with ULR + QR",
              "Maintain 10-year traceability logs"
            ]}
            resources={[
              { title: "Calibration Control Setup Guide", url: "#" },
              { title: "ULR/QR Implementation Manual", url: "#" }
            ]}
          />

          <PracticeCard
            title="Proficiency Testing & Interlaboratory Comparisons"
            description="Ensure confidence in measurement results through PT/ILC participation and evaluation."
            icon="🔍"
            category="Testing"
            difficulty="Advanced"
            timeEstimate="45 min read"
            steps={[
              "Select suitable PT providers",
              "Review test samples and parameters",
              "Analyze deviation reports",
              "Implement corrective actions"
            ]}
            resources={[
              { title: "PT Participation Plan", url: "#" },
              { title: "ILAC G13 & ISO 17043 Summary Sheet", url: "#" }
            ]}
          />

          <PracticeCard
            title="Nonconformance & Corrective Action Management"
            description="Develop a robust NC/CAPA system to identify, record, and close findings effectively."
            icon="🚨"
            category="Response"
            difficulty="Advanced"
            timeEstimate="35 min read"
            steps={[
              "Log nonconformities with reference to clauses",
              "Assign responsibility and due dates",
              "Verify implementation effectiveness",
              "Review during internal audits"
            ]}
            resources={[
              { title: "NC Register Template", url: "#" },
              { title: "CAPA Report Format", url: "#" }
            ]}
          />
        </div>
      </div>
    </section>

    {/* Industry-Specific Practices */}
    <section class="py-16">
      <div class="container mx-auto max-w-7xl px-4">
        <h2 class="text-3xl font-bold text-gray-800 mb-12">Industry-Specific Practices</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <PracticeCard
            title="Manufacturing & NDT Labs"
            description="Best practices for mechanical, NDT, and dimensional testing environments."
            icon="🏭"
            category="Manufacturing"
            difficulty="Intermediate"
            timeEstimate="40 min read"
            steps={[
              "Define calibration intervals for gauges and fixtures",
              "Maintain job traceability from request to report",
              "Validate test results using control samples"
            ]}
            resources={[
              { title: "NDT Process Checklist", url: "#" },
              { title: "Traceability Matrix", url: "#" }
            ]}
          />

          <PracticeCard
            title="Thermal & Electrical Calibration Labs"
            description="Practical guidance on calibration accuracy, uncertainty budgets, and record validation."
            icon="🌡️"
            category="Calibration"
            difficulty="Intermediate"
            timeEstimate="35 min read"
            steps={[
              "Control measurement environments",
              "Manage master instruments and calibration records",
              "Document traceability to national standards"
            ]}
            resources={[
              { title: "Uncertainty Calculation Sheet", url: "#" },
              { title: "Reference Equipment Log", url: "#" }
            ]}
          />

          <PracticeCard
            title="Environmental & Chemical Testing Labs"
            description="Guidelines for maintaining test integrity and compliance with regulatory norms."
            icon="💧"
            category="Testing"
            difficulty="Intermediate"
            timeEstimate="30 min read"
            steps={[
              "Define sampling and preservation methods",
              "Record equipment calibration and reagent traceability",
              "Review test reports for compliance and completeness"
            ]}
            resources={[
              { title: "Sampling SOP Template", url: "#" },
              { title: "Test Report Review Checklist", url: "#" }
            ]}
          />
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-16 bg-gradient-to-r from-orange-100 to-blue-100">
      <div class="container mx-auto max-w-7xl px-4 text-center">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">
          Ready to Implement These Practices?
        </h2>
        <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
          Start using OMS Software to automate audits, manage documentation, and stay audit-ready year-round.
        </p>
        <div class="flex flex-col md:flex-row justify-center gap-4">
          <Button size="lg" className="bg-orange-500 hover:bg-orange-600 text-white w-full md:w-auto">
            Start Free Trial
          </Button>
          <Button size="lg" variant="outline" className="w-full md:w-auto">
            Contact Support
          </Button>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
